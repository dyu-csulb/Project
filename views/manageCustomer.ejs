<!-- Header -->
<%- include("../views/shared/_header.ejs") -%>

<script src="js/manageCustomer.js"></script>
<script src="js/addCustomer.js"></script>
<script src="js/updateCustomer.js"></script>
<script src="js/deleteCustomer.js"></script>
<script src="js/common.js"></script>
<div>
    <br/>
    <div>
        <h3>Manage Customers</h3>
    </div>

    <div class="my-fieldset">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 mt-2">
                <label id="lblTotal">
                </label>
                <hr/>
            </div>
        </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
            <label>
                ID:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control input-sm" id="txtId"  data-bs-toggle="tooltip" data-bs-placement="top" title="equals...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                First Name:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text"  class="form-control" id="txtFirstName"  data-bs-toggle="tooltip" data-bs-placement="top" title="begins with...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Last Name:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text"  class="form-control" id="txtLastName" data-bs-toggle="tooltip" data-bs-placement="top" title="begins with...">
        </div>
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
        </div>
    </div>
    <div style="padding: 5px;">
    </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
            <label>
                State:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <select id="cboState" class="custom-select" data-bs-toggle="tooltip" data-bs-placement="top" title="select state...">
                <option selected value=""></option>
                <option value="AL">AL</option>
                <option value="AK">AK</option>
                <option value="AZ">AZ</option>
                <option value="AR">AR</option>
                <option value="CA">CA</option>
                <option value="CO">CO</option>
                <option value="CT">CT</option>
                <option value="DE">DE</option>
                <option value="DC">DC</option>
                <option value="FL">FL</option>
                <option value="GA">GA</option>
                <option value="HI">HI</option>
                <option value="ID">ID</option>
                <option value="IL">IL</option>
                <option value="IN">IN</option>
                <option value="IA">IA</option>
                <option value="KS">KS</option>
                <option value="KY">KY</option>
                <option value="LA">LA</option>
                <option value="ME">ME</option>
                <option value="MD">MD</option>
                <option value="MA">MA</option>
                <option value="MI">MI</option>
                <option value="MN">MN</option>
                <option value="MS">MS</option>
                <option value="MO">MO</option>
                <option value="MT">MT</option>
                <option value="NE">NE</option>
                <option value="NV">NV</option>
                <option value="NH">NH</option>
                <option value="NJ">NJ</option>
                <option value="NM">NM</option>
                <option value="NY">NY</option>
                <option value="NC">NC</option>
                <option value="ND">ND</option>
                <option value="OH">OH</option>
                <option value="OK">OK</option>
                <option value="OR">OR</option>
                <option value="PA">PA</option>
                <option value="RI">RI</option>
                <option value="SC">SC</option>
                <option value="SD">SD</option>
                <option value="TN">TN</option>
                <option value="TX">TX</option>
                <option value="UT">UT</option>
                <option value="VT">VT</option>
                <option value="VA">VA</option>
                <option value="WA">WA</option>
                <option value="WV">WV</option>
                <option value="WI">WI</option>
                <option value="WY">WY</option>
              </select>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Sales YTD:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control"  id="txtSalesYTD"  data-bs-toggle="tooltip" data-bs-placement="top" title="greater than or equals to...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Previous Sales YTD:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control" id="txtPrevSalesYTD"  data-bs-toggle="tooltip" data-bs-placement="top" title="greater than or equal to...">
        </div>
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-sm-11 col-md-11 col-lg-11 mt-2" style="text-align: center;">            
            <button id='btnSearch' onclick="search()" type="button" class="btn btn-primary btn-sm">
                Search
              </button>    
              <button onclick="reset()" type="button" class="btn btn-info btn-sm">
                Reset
              </button>  
        </div>
    </div>
</div>
<br/>
<label id="lblRecordsFound">
</label>
<br/>
<table class="table" id="tblCustomers">
    <thead>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>State</th>
        <th>Sales YTD</th>
        <th>Prev Sales YTD</th>
        <th>
            <button id="btnAdd" type="button" class="btn btn-success btn-sm">
                Add Customer
            </button>
        </th>
    </thead>
</table> 
  
<!-- Modal -->
<div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="customerModalLabel"></h5>
            <button type="button" class="btn-close btn btn-light" data-bs-dismiss="modal" aria-label="Close">X</button>
        </div>
        <form>
        <div class="modal-body">
            <%- include("../views/shared/_edit.ejs") -%>
        </div>
        <div class="modal-footer">
            <button id="btnClose" type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            <button id="btnSave" type="button" class="btn btn-primary btn-sm">Save changes</button>
            <button id="btnDelete" type="button" class="btn btn-danger btn-sm">Delete</button>
        </div>
        <form>
        </div>
    </div>
</div>
<!-- Footer -->
<%- include("../views/shared/_footer.ejs") -%>