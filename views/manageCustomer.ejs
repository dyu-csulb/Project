
<%- include("../views/shared/_header.ejs") -%>

<script src="js/manageCustomer.js"></script>

<div>
    <br/>
    <div>
        <h3>Manage Customers</h3>
    </div>

    <div class="my-fieldset">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 mt-2">
                <label id="lblTotal">
                </label>
                <hr/>
            </div>
        </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
            <label>
                ID:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control input-sm" id="txtId"  data-bs-toggle="tooltip" data-bs-placement="top" title="equals...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                First Name:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text"  class="form-control" id="txtFirstName"  data-bs-toggle="tooltip" data-bs-placement="top" title="begins with...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Last Name:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text"  class="form-control" id="txtLastName" data-bs-toggle="tooltip" data-bs-placement="top" title="begins with...">
        </div>
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
        </div>
    </div>
    <div style="padding: 5px;">
    </div>
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
            <label>
                State:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="text" maxlength="2"  class="form-control" id="txtState" data-bs-toggle="tooltip" data-bs-placement="top" title="equals...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Sales YTD:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control" id="txtSalesYTD"  data-bs-toggle="tooltip" data-bs-placement="top" title="greater than or equals to...">
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 mt-2 my-label">
            <label>
                Previous Sales YTD:
            </label>            
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <input type="number"  class="form-control" id="txtPrevSalesYTD"  data-bs-toggle="tooltip" data-bs-placement="top" title="greater than or equal to...">
        </div>
        <div class="col-sm-1 col-md-1 col-lg-1 mt-2 my-label">
        </div>
    </div>
    <hr/>
    <div class="row">

        <div class="col-sm-11 col-md-11 col-lg-11 mt-2" style="text-align: center;">            
            <button onclick="search()" type="button" class="btn btn-primary btn-sm">
                Search
              </button>    
              <button onclick="reset()" type="button" class="btn btn-info btn-sm">
                Reset
              </button>  
        </div>
    </div>
</div>
<br/>

<table class="table" id="tblCustomers">
    <thead>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>State</th>
        <th>Sales YTD</th>
        <th>Prev Sales YTD</th>
        <th>
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Customer
            </button>
        </th>
    </thead>
</table> 
  
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close btn btn-light" data-bs-dismiss="modal" aria-label="Close">X</button>
    </div>
    <div class="modal-body">
        ...
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btn-sm">Save changes</button>
    </div>
    </div>
</div>
</div>
  

</div>

<%- include("../views/shared/_footer.ejs") -%>